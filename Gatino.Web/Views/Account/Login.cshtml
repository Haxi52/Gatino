@model Gatino.Web.Models.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Login</h4>
                            <hr />
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-control form-control-sm" />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control form-control-sm" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-right mt-5">
                <a class="btn btn-secondary" href="~/">Cancel</a>
                <button type="submit" class="btn btn-primary ml-2">Login</button>
            </div>
        </div>
    </div>
</form>